{
  "name": "sc-kingsms",
  "version": "1.0.3",
  "description": "Cliente TypeScript/Node para a API da KingSMS (envio de SMS, status e saldo)",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist || del dist",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "npm test && npm run build && npm version patch",
    "deploy": "npm run build && npm publish"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "sourcemap": true,
    "clean": true,
    "target": "es2020",
    "minify": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saulotarsobc/sc-kingsms.git"
  },
  "keywords": [
    "sms",
    "kingsms",
    "api",
    "brasil",
    "typescript",
    "node"
  ],
  "author": "LLBI Soluções",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/saulotarsobc/sc-kingsms/issues"
  },
  "homepage": "https://github.com/saulotarsobc/sc-kingsms#readme",
  "dependencies": {
    "axios": "^1.7.7"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.2.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.2.4",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
